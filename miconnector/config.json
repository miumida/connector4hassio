{
  "name": "Mi-Connector",
  "version": "1.0.0",
  "slug": "miconnector",
  "description": "Mi-Connector for Hass.io",
  "auto_uart": true,
  "url": "https://github.com/miumida/hassio-Mi-Connector",
  "startup": "before",
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ],
  "boot": "auto",
  "map": [
    "share:rw",
    "config:rw"
  ],
  "options": {
    "data_path": "/share/miconnector",
    "homeassistant": true,
    "permit_join": false,
    "mqtt_base_topic": "lgtv"
  },
  "schema": {
    "data_path": "str",
    "homeassistant": "bool",
    "permit_join": "bool",
    "mqtt_base_topic": "str"
  }
}
